{
  "name": "vscode-server-tool",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "predev": "cd docker && docker build --tag vscode-server-tool -f Dockerfile.vscode .",
    "dev": "remix dev",
    "start": "remix-serve build",
    "postinstall": "remix setup node",
    "prisma:generate": "prisma generate",
    "prisma:db:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev --preview-feature",
    "prisma:studio": "prisma studio",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|gql|graphql|mdx|vue)\"",
    "typecheck": "tsc -b",
    "validate": "concurrently \"yarn run lint\" \"yarn run typecheck\" \"yarn run build\""
  },
  "dependencies": {
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.6",
    "@emotion/cache": "^11.7.1",
    "@emotion/react": "11",
    "@emotion/server": "11",
    "@emotion/styled": "11",
    "@prisma/client": "3.5.0",
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "dockerode": "^3.3.1",
    "framer-motion": "6",
    "history": "^5.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/dockerode": "^3.3.5",
    "@types/shelljs": "^0.8.11",
    "autoprefixer": "10.4.2",
    "babel-loader": "^8.2.3",
    "chromatic": "6.4.1",
    "concurrently": "7.0.0",
    "constructs": "^10.0.54",
    "esbuild-register": "3.1.2",
    "eslint": "8.7.0",
    "eslint-config-kentcdodds": "20.0.1",
    "prisma": "3.5.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.1.2"
  },
  "resolutions": {
    "webpack": "^5"
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "server-build",
    "build",
    "public/build",
    "*.ignored/",
    "*.ignored.*"
  ],
  "engines": {
    "node": ">=14"
  }
}
